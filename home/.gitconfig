[user]
	name = etienne
	email = etienne.molinier@gmail.com
[credential]
    helper = store --file ~/.git-credentials
    helper = cache --timeout 30000

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[rebase]
	autoStash = true
[pull]
	rebase = true
